{{!-- {{#if foundUser}} --}}

<div class="profileHead">
<h1 class="text-xl">{{this.username}}'s Memories</h1>
<a href="/create-memory" class="px-3 py-4 text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none">Create a Memory</a>
</div>


<main class="grid place-items-center">
  <div>
    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
  {{#each this.memories}}
      <div class="bg-gray-900 shadow-lg rounded p-3 m-5">
        <div class="group relative">
          <img class="w-full md:w-72 block rounded" src="{{imgPath}}" alt="Picture"/>
          <a href="/detail/{{id}}" class="m-2 text-center text-white text-lg"><h3>{{title}}</h3></a>

          <div class="p-2 h-full top-0 flex items-center justify-evenly">
            <a href="/detail/{{id}}" class="px-3 py-2 text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none">See</a>
            <a href="/edit/{{_id}}" class="px-3 py-2 text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none">Edit</a>
            <form action="/delete/{{id}}" method="POST">
            <button class="px-3 py-2 text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none">Delete</button>
            </form>
            
          </div>

        </div>
        
      </div>
      {{/each}}
    </section>
  </div>  
</main>



{{!-- {{/if}} --}}

