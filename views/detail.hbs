
<div clas="details">

  <img src="{{this.imgPath}}" alt="{{this.imgName}}" class="detailimg"/>
  <h3 class="text-center text-2xl py-3">{{this.title}}</h3>
  <p class="text-justify">{{this.description}}</p>

  <div class="btn-details">
    <a href="/edit/{{this.id}}" class="mx-2 px-3 py-2 text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none">Edit</a>

    <form action="/delete/{{_id}}" method="POST">
    <button class="px-3 py-2 text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none">Delete</button>
    </form>
  </div>

</div>


